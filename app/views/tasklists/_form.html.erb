<%= form_for(tasklist) do |f| %>
  <% if tasklist.errors.any? %>
    <div id="error_explanation">
       <ul>
          <% tasklist.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
       </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, { 起票: 1, 作業中: 2, 完了: 3 } %>
  
  <%= f.submit '登録' %>
<% end %>
